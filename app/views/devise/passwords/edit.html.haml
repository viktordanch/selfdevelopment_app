.row
  .large-offset-4.medium-offset-3.small-12.medium-6.large-4.columns.device_page
    %h2 Change your password

    = form_for(resource, as: resource_name,
                         url: password_path(resource_name),
                         html: { method: :put }) do |f|
      = f.hidden_field :reset_password_token

      .field
        = f.label :password, 'New password'
        - if @minimum_password_length
          %em "(#{@minimum_password_length} characters minimum)"
        = f.password_field :password, autofocus: true, autocomplete: 'off'
        = input_errors(resource.errors, :email)

      .field
        = f.label :password_confirmation, 'Confirm new password'
        = f.password_field :password_confirmation, autocomplete: 'off'
        = input_errors(resource.errors, :email)

      .actions
        = f.submit 'Change my password', class: 'primary button expand'

    = render 'devise/shared/links'
