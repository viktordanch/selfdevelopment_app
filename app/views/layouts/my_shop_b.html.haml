!!!
%html
  %head
    %meta{ charset: 'UTF-8' }
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }

    %title= content_for?(:title) ? yield(:title) : 'My Shop'

    -# = render partial: '/layouts/favicon_link'

    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }
    -# = meta_keywords
    -# = meta_description
    -# = meta_title
    -# = stylesheet_link_tag 'arbs', media: 'all'
    %script{ src: 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js' }
    %script{ src: 'https://cdnjs.cloudflare.com/ajax/libs/foundation/6.1.1/foundation.js' }

    = stylesheet_link_tag('shop_b')

    = csrf_meta_tags

    - if content_for(:head)
      = yield(:head)
  %body{ id: content_for?(:body_id) ? yield(:body_id) : '' }
    = yield

    = requirejs_include_tag 'my_shop_b'
    :javascript
      $(function () {
        $(document).foundation();
      });

