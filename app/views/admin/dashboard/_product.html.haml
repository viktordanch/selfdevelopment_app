%h2
  Import Categories

  = semantic_form_for :dashboard, url: { action: :import_categories }, html: { multipart: true } do |f|
    = file_field_tag :file
    %br
    = submit_tag "Import"

%h2
  Import Products

  = semantic_form_for :dashboard, url: { action: :import_products }, html: { multipart: true } do |f|
    = file_field_tag :file
    %br
    = check_box_tag :total_remove
    = label_tag(:total_remove, 'Clean table befor load')
    %br
    = submit_tag "Import"

%h2
  Import Products Descriptions

  = semantic_form_for :dashboard, url: { action: :import_products_description }, html: { multipart: true } do |f|
    = file_field_tag :file
    %br
    = submit_tag "Import"

%h2
  Import Image Zip

  = semantic_form_for :dashboard, url: { action: :import_images }, html: { multipart: true } do |f|
    = file_field_tag :zip
    %br
    = submit_tag "Import"

